            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_update_uom_history()</field>
        </record>

        <!-- Update po,so line uom history -->
        <record id="action_update_po_so_line_uom_history" model="ir.actions.server">
