        <!-- Delete stock move and move lines recods -->
        <record id="action_delete_stock_move_line" model="ir.actions.server">
            <field name="name">Action delete stock moves</field>
            <field name="model_id" ref="stock.model_stock_move_line"/>
            <field name="binding_model_id" ref="stock.model_stock_move_line"/>
            <field name="state">code</field>
            <field name="code">records.action_delete_stock_moves()</field>
        </record>

        <!-- update prouct pricelist record -->
        <record id="action_product_pricelist" model="ir.actions.server">
            <field name="name">Action update product pricelist</field>
            <field name="model_id" ref="product.model_product_pricelist"/>
            <field name="binding_model_id" ref="product.model_product_pricelist"/>
            <field name="state">code</field>
            <field name="code">records.action_product_pricelist()</field>
        </record>
        
        <!-- Update manufacturing history -->
        <record id="action_update_manufacturing_history" model="ir.actions.server">
            <field name="name">Update manufacturing history</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_update_manufacturing_history()</field>
        </record>

        <!-- Update product history -->
        <record id="action_update_product_history" model="ir.actions.server">
            <field name="name">Update product history</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_update_product_history()</field>
        </record>

        <!-- Archive child product -->
        <record id="action_archive_child_products" model="ir.actions.server">
            <field name="name">Archive child product</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_archive_and_export_xlsx()</field>
        </record>

        <!-- Generate product sheet which are parent and not multi barcode lines -->
        <record id="action_generate_skipped_barcode_lines" model="ir.actions.server">
            <field name="name">Generate skipped barcode lines</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">action = env['product.template'].action_generate_skipped_barcode_lines()</field>
        </record>

        <!-- Server Action to delete expire pricelist -->
        <record id="action_delete_expired_rules_pricelist" model="ir.actions.server">
            <field name="name">Delete Expired Pricelist Rules</field>
            <field name="model_id" ref="product.model_product_pricelist"/>
            <field name="binding_model_id" ref="product.model_product_pricelist"/> <!-- Attach to Pricelist -->
            <field name="state">code</field>
            <field name="code">records.action_delete_expired_rules()</field>
        </record>

        <!-- Server Action to export the vendors related product excel -->
       <record id="action_export_vendors_products_xlsx" model="ir.actions.server">
            <field name="name">Export Vendor Products</field>
            <field name="model_id" ref="product.model_res_partner"/>
            <field name="binding_model_id" ref="product.model_res_partner"/> 
            <field name="state">code</field>
            <field name="code">action = env.ref('product_data_transfer.action_vendor_export_wizard').read()[0]
action['context'] = {'default_vendor_ids': records.ids}
action
            </field>
        </record>


    </data>
