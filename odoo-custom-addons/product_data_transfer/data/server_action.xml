            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_set_product()</field>
        </record>


        <!-- Generate barcode uom lines -->
        <record id="action_generate_barcode_uom_lines" model="ir.actions.server">
            <field name="name">Action Generate Barcode UOM Lines</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_generate_barcode_uom_lines()</field>
        </record>

