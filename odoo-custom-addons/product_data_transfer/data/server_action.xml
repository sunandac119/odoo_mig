        </record>

        <!-- Update ml, sml line uom history -->
        <record id="action_update_barcode_and_description" model="ir.actions.server">
            <field name="name">Update SM, SML barcode and description history</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">records.action_update_barcode_and_description()</field>
        </record>

        <!-- Update po,so line uom history -->
        <record id="action_update_barcode_and_description_po_so" model="ir.actions.server">
            <field name="name">Update PO, SO barcode and description history</field>
            <field name="model_id" ref="product.model_product_template"/>
