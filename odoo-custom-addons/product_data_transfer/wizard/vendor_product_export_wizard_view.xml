<odoo>
    <record id="view_vendor_product_export_wizard" model="ir.ui.view">
        <field name="name">vendor.product.export.wizard.form</field>
        <field name="model">vendor.product.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Vendor Products">
                <group>
                    <field name="vendor_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_download_excel" type="object" class="btn-primary" string="Download"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vendor_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Vendor Products</field>
        <field name="res_model">vendor.product.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
