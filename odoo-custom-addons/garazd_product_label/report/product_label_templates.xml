<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="label_57x35">
        <table class="table" t-att-style="'border: {}'.format('%dpx solid #777;' % label.wizard_id.border_width if label.wizard_id.border_width else '0')">
            <tr height="155px" style="border:1;margin:0;padding:0;">
                <td class="col-xs-4 text-center" style="border:1;margin:0;padding:0;">
                    <div style="overflow:hidden; height:80px !important; width: 250px !important; padding: 0; line-height: 1.3;">
                        <span   style="width:20px;height:20px;margin-top:0px;display:inline-block;position: absolute;">
                            <img t-att-src="'/web/image/product.product/%s/image_1920' % label.product_id.id"
                                 style="width:70px; height:70px; object-fit:contain;"
                                 t-att-alt="label.product_id.name"
                            t-options-widget="&quot;image&quot;"/>
                        </span>
                        <span t-field="label.product_id.with_context(lang=label.wizard_id.lang).name" style="font-size: 10px;margin-left:80px;word-wrap: break-word;;text-align: left;width:170px;height:25px;margin-top:0px;display:inline-block"/>
                         <span t-if="label.product_id.product_template_attribute_value_ids" t-esc="u', '.join(map(lambda x: x.attribute_line_id.attribute_id.name + u': ' + x.name, label.product_id.product_template_attribute_value_ids))" class="badge"/>
                         <br/>
                        <span t-if="label.product_id.currency_id.position == 'before'" t-field="label.product_id.currency_id.symbol" style="margin-left: 100px;"/>
                        <span t-esc="'{:.2f}'.format(label.product_id.lst_price)" style="width:100px;height:25px;font-size:25px;font=weight=bold;"/>
                        <span t-if="label.product_id.currency_id.position == 'after'" t-field="label.product_id.currency_id.symbol"/>/
                        <span t-field="label.product_id.uom_id" style="width:100px;height:25px;font-size:10px;"/>
                    </div>
                    <div t-if="label.product_id.barcode" class="text-center align-middle" style="width: 61%; height: 45px; padding: 0 0px;margin-left:100px">
                        <span style="font-size:10px">PRINT DATE</span>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')" style="font-size:10px"/>
                        <t t-if="label.wizard_id.humanreadable" t-set="show_code" t-value="1"/>
                        <t t-else="" t-set="show_code" t-value="1"/>
                        <img alt="Barcode" t-if="len(label.product_id.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' % ('EAN13', label.product_id.barcode, 600, 100, show_code)" style="overflow: hidden; width: 100%; height: 2.5rem;"/>
                        <img alt="Barcode" t-elif="len(label.product_id.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' % ('EAN8', label.product_id.barcode, 600, 100, show_code)" style="overflow: hidden; width: 100%; height: 2.5rem;"/>
                        <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=%s' % ('Code128', label.product_id.barcode, 600, 100, show_code)" style="overflow: hidden; width: 100%; height: 2.5rem;"/>
                    </div>
                </td>
            </tr>
        </table>
    </template>

    <template id="report_product_label_57x35_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="count" t-value="0" />
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-foreach="docs" t-as="label">
                        <t t-set="qty" t-value="1" />
                        <t t-if="label.qty">
                            <t t-set="qty" t-value="label.qty" />
                        </t>
                        <t t-foreach="list(range(qty))" t-as="index_qty">
                            <div t-if="count % 21 == 0" style="page-break-after:always;"/>
                            <div t-if="count % 3 == 0" style="clear:both;"/>
                            <div style="width: 30%; float: left; height: 180px; margin: 0 10px;">
                                <t t-call="garazd_product_label.label_57x35"/>
                            </div>
                            <t t-set="count" t-value="count+1" />
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

</odoo>
