<odoo>
    <!-- Server Action to Create Invoices -->
    <record id="action_create_invoices" model="ir.actions.server">
        <field name="name">Create Invoice</field>
        <field name="model_id" ref="point_of_sale.model_pos_order"/>
        <field name="binding_model_id" ref="point_of_sale.model_pos_order"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            env['pos.order'].browse(env.context.get('active_ids')).action_create_invoice()
        </field>
    </record>

    <!-- Add Invoice Field to Tree View -->
    <record id="view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.tree.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="invoice_id" string="Invoice"/>
            </xpath>
        </field>
    </record>
</odoo>
