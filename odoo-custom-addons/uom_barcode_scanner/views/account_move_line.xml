<odoo>
    <record id="account_move_form_inherit_view" model="ir.ui.view">
        <field name="name">account.move.form.inherit.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/form[1]/sheet[1]/group[1]/field[@name='product_id']" position="after">
                <field name="x_scanned_barcode" attrs="{'invisible': [('parent.move_type', '=', 'in_invoice')]}"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='invoice_line_ids']/tree[1]/field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" attrs="{'invisible': [('parent.move_type', '=', 'in_invoice')]}" column_invisible="1"/>
            </xpath>
    </field>
</record>
</odoo>