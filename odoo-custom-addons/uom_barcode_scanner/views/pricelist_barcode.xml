<odoo>
    <record id="product_pricelist_item_form_barcode_view" model="ir.ui.view">
        <field name="name">product.pricelist.item.form.barcode</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view"/>
        <field name="priority">1001</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Barcode"/>
            </xpath>
            <!-- <xpath expr="//field[@name='product_tmpl_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//field[@name='applied_on']" position="after">
                <field name="uom_id" attrs="{'required': [('applied_on', 'in', ['1_product', '0_product_variant'])]}" context="{'restrict_uom_product_tmpl_id': product_tmpl_id}"/>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_view_barcode" model="ir.ui.view">
        <field name="name">product.pricelist.view.barcode</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='item_ids']/tree/field[1]" position="before">
                <field name="x_scanned_barcode" placeholder="Barcode"/>
            </xpath>
            <!-- <xpath expr="//field[@name='product_tmpl_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//field[@name='item_ids']/tree/field[@name='min_quantity']" position="before">
                <field name="uom_id" attrs="{'required': [('applied_on', 'in', ['1_product', '0_product_variant'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="product_pricelist_item_tree_view_from_product_inh2" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.view.from.product.inh.remove.attrs</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product_pricelist_packaging_knk.product_pricelist_item_tree_view_from_product_inh"/>
        <field name="priority">1001</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_packaging_id']" position="attributes">
                <attribute name="attrs"/>
            </xpath>
        </field>
    </record>

