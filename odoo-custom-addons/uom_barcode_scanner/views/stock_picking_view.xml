    <record id="stock_request_inherit_from_view" model="ir.ui.view">
        <field name="name">stock.request.form.inherited</field>
        <field name="model">stock.request</field>
        <field name="priority">1001</field>
        <field name="inherit_id" ref="warehouse_stock_request_app.wh_stock_request_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stock_line_ids']/tree//field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Barcode"/>
            </xpath>
            <xpath expr="//field[@name='stock_line_ids']/tree//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="partner_id" position="attributes">
                <attribute name="options">{'no_create_edit': True, 'no_create': True}</attribute>
            </field>
        </field>
    </record>


