<odoo>
    <record id="purchase_order_form_barcode" model="ir.ui.view">
        <field name="name">purchase.order.form.barcode</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Add barcode field in form view of order lines -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Barcode"/>
            </xpath>

            <!-- Add barcode field in tree view of order lines -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Barcode"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="before">
                <field name="rounding" placeholder="Rounding"/>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="attributes">
                <attribute name="decoration-danger">product_qty &lt;= 0</attribute>
            </xpath>

            <field name="partner_ref" position="before">
                <field name="vendor_display" readonly="1"/>
            </field>

        </field>
    </record>
    <record id="purchase_order_form_remove_external_link" model="ir.ui.view">
        <field name="name">purchase.order.form.remove.external.link</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_open': True}</attribute>
                <attribute name="widget">many2one</attribute>
            </xpath>

        </field>
    </record>
    <record id="product_supplierinfo_form_barcode" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.view.barcode</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="attributes">
                <attribute name="readonly">False</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_form_inherit_picking_button" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.picking.button</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_po_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o" attrs="{'invisible': [('po_invoice_count','=', 0)]}">
                    <field name="po_invoice_count" widget="statinfo"/>
                </button>
                <button name="action_view_po_picking"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck" attrs="{'invisible': [('po_picking_count','=', 0)]}">
                    <field name="po_picking_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>


</odoo>