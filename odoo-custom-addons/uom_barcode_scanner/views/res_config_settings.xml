<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Database Sync</h2>
                <div class="col-xs-12 row o_settings_container" id="databse_sync">
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">URL</span>
                                <div class="text-muted content-group mt16">
                                    <field name="url"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Database Name -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Database Name</span>
                                <div class="text-muted content-group mt16">
                                    <field name="db_name"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Username -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Username</span>
                                <div class="text-muted content-group mt16">
                                    <field name="username"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Password -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Password</span>
                                <div class="text-muted content-group mt16">
                                    <field name="password" password="True"/>
                                </div>
                            </div>
                        </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>
