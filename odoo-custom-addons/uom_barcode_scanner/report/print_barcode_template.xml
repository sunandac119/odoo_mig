<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_mrp_barcode">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="barcode_val" t-value="o.x_scanned_barcode or '0000000000000'"/>
                <t t-set="company" t-value="res_company"/>

                <t t-set="labels" t-value="range(int(o.product_qty))"/>
                <t t-set="pages" t-value="[(labels[i:i+6]) for i in range(0, len(labels), 6)]"/>
                <t t-set="page_count" t-value="len(pages)"/>

                <t t-foreach="enumerate(pages)" t-as="page_info">
                    <t t-set="page_index" t-value="page_info[0]"/>
                    <t t-set="page" t-value="page_info[1]"/>

                    <t t-if="page">
                        <div class="page"
                             t-attf-style="width:100%; padding:10px; font-family:Arial, sans-serif; font-size:8px; {{ 'page-break-after: always;' if page_index + 1 &lt; page_count else '' }}">

                            <h3 style="text-align:left; font-weight:bold; margin-bottom:15px;">
                                Product Label:
                                <t t-esc="o.name"/>
                            </h3>

                            <table style="width:100%; border-collapse:collapse;">
                                <t t-if="len(page) == 1">
                                    <tr>
                                        <td style="width:50%; vertical-align:top; padding:4px;">
                                            <div style="border:1px solid #000; padding:6px; box-sizing:border-box;">
                                                <table style="width:100%; border-collapse:collapse; font-size:8px;">
                                                    <tr valign="top">
                                                        <td style="width:55%; padding-right:5px;">
                                                            <strong>
                                                                <t t-esc="company.name or 'N/A'"/>
                                                            </strong>
                                                            <br/>
                                                            <t t-if="company.street">
                                                                <t t-esc="company.street or ''"/>
                                                                <br/>
                                                                <t t-esc="company.street2 or ''"/>
                                                                <br/>
                                                                <t t-esc="'%s, %s, %s %s' % (company.city or '', company.state_id.name or '', company.country_id.name or '', company.zip or '')"/>
                                                            </t>
                                                            <br/>
                                                            <span>Tel:</span>
                                                            <t t-esc="company.phone or ''"/>,
                                                            <t t-esc="company.x_studio_mobile_number or ''"/>
                                                            <span>Fax:</span>
                                                            <t t-esc="company.fax_number or ''"/>
                                                            <br/>
                                                            <span>Main Vendor:</span>
                                                            <t t-esc="o.product_id.main_seller_id.name.name or ''"/>
                                                        </td>
                                                        <td style="width:45%; vertical-align:top;">
                                                            <strong>
                                                                <t t-esc="o.product_id.name or ''"/>
                                                            </strong>
                                                            <br/>
                                                            <strong>Ingredients:</strong>
                                                            <br/>
                                                            <t t-esc="o.product_id.product_tmpl_id.x_studio_ingredient_1 or ''"/>
                                                        </td>
                                                    </tr>
                                                </table>

                                                <table style="width:100%; border:none; border-collapse:collapse; margin-top:5px;">
                                                    <tr valign="top">
                                                        <t t-if="o.product_id.product_tmpl_id.nutrition_table_html">
                                                            <td style="width:50%; padding:4px; vertical-align:top;">
                                                                <div style="font-size:8px; max-height:162px; overflow-y:auto; overflow-x:hidden; word-break:break-word; line-height:1.2;">
                                                                    <strong>Nutrition Information</strong>
                                                                    <br/>
                                                                    <t t-raw="o.product_id.product_tmpl_id.nutrition_table_html or ''"/>
                                                                </div>
                                                            </td>
                                                        </t>
                                                        <t t-else="">
                                                            <td style="width:50%; padding:4px; vertical-align:top;"/>
                                                        </t>
                                                        <td style="width:50%; padding:4px; vertical-align:top; font-size:8px;">
                                                            <div style="margin-left:20px; text-align:left; line-height:1.3;">
                                                                <div>
                                                                    <strong>Weight:</strong>
                                                                    <t t-esc="o.product_id.weight or 0"/>g
                                                                </div>

                                                                <t t-set="expire_date"
                                                                   t-value="datetime.date.today() + relativedelta(months=6)"/>
                                                                <div>
                                                                    <strong>Expire Date:</strong>
                                                                    <t t-esc="expire_date.strftime('%d-%m-%Y')"/>
                                                                </div>
                                                            </div>
                                                            <div style="margin-top:6px; text-align:center;">
                                                                <div t-esc="barcode_val"
                                                                     t-options="{'widget':'barcode','type':'Code128','width':170,'height':50}"/>
                                                                <div style="font-size:12px; margin-top:2px;">
                                                                    <t t-esc="barcode_val"/>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </td>
                                        <td style="width:50%;"></td>
                                    </tr>
                                </t>
                                <t t-else="">
                                    <t t-foreach="enumerate(page)" t-as="label_info">
                                        <t t-set="label_index" t-value="label_info[0]"/>
                                        <t t-if="label_index % 2 == 0">
                                            <tr>
                                                <td style="width:50%; vertical-align:top; padding:4px;">
                                                    <div style="border:1px solid #000; padding:6px; box-sizing:border-box;">

                                                        <table style="width:100%; border-collapse:collapse; font-size:8px;">
                                                            <tr valign="top">
                                                                <td style="width:55%; padding-right:5px;">
                                                                    <strong>
                                                                        <t t-esc="company.name or 'N/A'"/>
                                                                    </strong>
                                                                    <br/>
                                                                    <t t-if="company.street">
                                                                        <t t-esc="company.street or ''"/>
                                                                        <br/>
                                                                        <t t-esc="company.street2 or ''"/>
                                                                        <br/>
                                                                        <t t-esc="'%s, %s, %s %s' % (company.city or '', company.state_id.name or '', company.country_id.name or '', company.zip or '')"/>
                                                                    </t>
                                                                    <br/>
                                                                    <span>Tel:</span>
                                                                    <t t-esc="company.phone or ''"/>,
                                                                    <t t-esc="company.x_studio_mobile_number or ''"/>
                                                                    <span>Fax:</span>
                                                                    <t t-esc="company.fax_number or ''"/>
                                                                    <br/>
                                                                    <span>Main Vendor:</span>
                                                                    <t t-esc="o.product_id.main_seller_id.name.name or ''"/>
                                                                </td>

                                                                <td style="width:45%; vertical-align:top;">
                                                                    <strong>
                                                                        <t t-esc="o.product_id.name or ''"/>
                                                                    </strong>
                                                                    <br/>
                                                                    <strong>Ingredients:</strong>
                                                                    <br/>
                                                                    <t t-esc="o.product_id.product_tmpl_id.x_studio_ingredient_1 or ''"/>
                                                                </td>
                                                            </tr>
                                                        </table>

                                                        <table style="width:100%; border:none; border-collapse:collapse; margin-top:5px;">
                                                            <tr valign="top">
                                                                <td style="width:50%; padding:4px; vertical-align:top;">
                                                                    <div style="font-size:8px; max-height:162px; overflow-y:auto; overflow-x:hidden;                    word-break:break-word; line-height:1.2;">
                                                                        <strong>Nutrition Information</strong>
                                                                        <br/>
                                                                        <t t-raw="o.product_id.product_tmpl_id.nutrition_table_html or ''"/>
                                                                    </div>
                                                                </td>

                                                                <td style="width:50%; padding:4px; vertical-align:top; font-size:8px;">
                                                                    <div style="margin-left:20px; text-align:left; line-height:1.3;">
                                                                        <div>
                                                                            <strong>Weight:</strong>
                                                                            <t t-esc="o.product_id.weight or 0"/>g
                                                                        </div>

                                                                        <t t-set="expire_date"
                                                                           t-value="datetime.date.today() + relativedelta(months=6)"/>
                                                                        <div>
                                                                            <strong>Expire Date:</strong>
                                                                            <t t-esc="expire_date.strftime('%d-%m-%Y')"/>
                                                                        </div>
                                                                    </div>

                                                                    <div style="margin-top:6px; text-align:center;">
                                                                        <div t-esc="barcode_val"
                                                                             t-options="{'widget':'barcode','type':'Code128','width':170,'height':50}"/>
                                                                        <div style="font-size:12px; margin-top:2px;">
                                                                            <t t-esc="barcode_val"/>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </td>

                                                <td t-if="label_index + 1 &lt; len(page)"
                                                    style="width:50%; vertical-align:top; padding:4px;">
                                                    <div style="border:1px solid #000; padding:6px; box-sizing:border-box;">

                                                        <table style="width:100%; border-collapse:collapse; font-size:8px;">
                                                            <tr valign="top">
                                                                <td style="width:55%; padding-right:5px;">
                                                                    <strong>
                                                                        <t t-esc="company.name or 'N/A'"/>
                                                                    </strong>
                                                                    <br/>
                                                                    <t t-if="company.street">
                                                                        <t t-esc="company.street or ''"/>
                                                                        <br/>
                                                                        <t t-esc="company.street2 or ''"/>
                                                                        <br/>
                                                                        <t t-esc="'%s, %s, %s %s' % (company.city or '', company.state_id.name or '', company.country_id.name or '', company.zip or '')"/>
                                                                    </t>
                                                                    <br/>
                                                                    <span>Tel:</span>
                                                                    <t t-esc="company.phone or ''"/>,
                                                                    <t t-esc="company.x_studio_mobile_number or ''"/>
                                                                    <span>Fax:</span>
                                                                    <t t-esc="company.fax_number or ''"/>
                                                                    <br/>
                                                                    <span>Main Vendor:</span>
                                                                    <t t-esc="o.product_id.main_seller_id.name.name or ''"/>
                                                                </td>
                                                                <td style="width:45%; vertical-align:top;">
                                                                    <strong>
                                                                        <t t-esc="o.product_id.name or ''"/>
                                                                    </strong>
                                                                    <br/>
                                                                    <strong>Ingredients:</strong>
                                                                    <br/>
                                                                    <t t-esc="o.product_id.product_tmpl_id.x_studio_ingredient_1 or ''"/>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                        <table style="width:100%; border:none; border-collapse:collapse; margin-top:5px;">
                                                            <tr valign="top">
                                                                <td style="width:50%; padding:4px; vertical-align:top;">
                                                                    <div style="font-size:8px; max-height:162px; overflow-y:auto; overflow-x:hidden;                    word-break:break-word; line-height:1.2;">
                                                                        <strong>Nutrition Information</strong>
                                                                        <br/>
                                                                        <t t-raw="o.product_id.product_tmpl_id.nutrition_table_html or ''"/>
                                                                    </div>
                                                                </td>

                                                                <td style="width:50%; padding:4px; vertical-align:top; font-size:8px;">
                                                                    <div style="margin-left:20px; text-align:left; line-height:1.3;">
                                                                        <div>
                                                                            <strong>Weight:</strong>
                                                                            <t t-esc="o.product_id.weight or 0"/>g
                                                                        </div>

                                                                        <t t-set="expire_date"
                                                                           t-value="datetime.date.today() + relativedelta(months=6)"/>
                                                                        <div>
                                                                            <strong>Expire Date:</strong>
                                                                            <t t-esc="expire_date.strftime('%d-%m-%Y')"/>
                                                                        </div>
                                                                    </div>

                                                                    <div style="margin-top:6px; text-align:center;">
                                                                        <div t-esc="barcode_val"
                                                                             t-options="{'widget':'barcode','type':'Code128','width':170,'height':50}"/>
                                                                        <div style="font-size:12px; margin-top:2px;">
                                                                            <t t-esc="barcode_val"/>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>

       