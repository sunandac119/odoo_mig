<odoo>
    <record id="view_pricelist_import_wizard" model="ir.ui.view">
        <field name="name">pricelist.import.wizard</field>
        <field name="model">pricelist.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Pricelist">
                <group>
                    <group>
                    <field name="file" filename="filename"/>
                    <field name="filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="is_update"/>
                    </group>
                </group>
                <footer>
                    <button string="Import" type="object"
                            name="action_import_pricelist"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pricelist_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Pricelist</field>
        <field name="res_model">pricelist.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_open_pricelist_import_wizard_server" model="ir.actions.server">
        <field name="name">Import Pricelist Wizard</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="binding_model_id" ref="product.model_product_pricelist"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
action = {
    "name": "Import Pricelist",
    "type": "ir.actions.act_window",
    "res_model": "pricelist.import.wizard",
    "view_mode": "form",
    "target": "new",
}
        </field>
    </record>

</odoo>
