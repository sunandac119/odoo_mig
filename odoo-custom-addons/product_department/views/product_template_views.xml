<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the primary Product Template form and insert Department after the Product Category -->
    <record id="view_product_template_form_inherit_department" model="ir.ui.view">
        <field name="name">product.template.form.department</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="department"/>
            </xpath>
        </field>
    </record>
</odoo>