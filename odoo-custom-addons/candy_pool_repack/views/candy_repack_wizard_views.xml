<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_candy_repack_wizard_form" model="ir.ui.view">
        <field name="name">candy.repack.wizard.form</field>
        <field name="model">candy.repack.wizard</field>
        <field name="arch" type="xml">
            <form string="Candy Pool Repacking">
                <group>
                    <field name="scan_barcode" placeholder="Scan pack barcode here..." autofocus="1"/>
                </group>

                <group col="4">
                    <field name="location_id"/>
                    <field name="dest_location_id"/>
                    <field name="pool_product_id"/>
                    <field name="repack_location_id" groups="candy_pool_repack.group_candy_repack_manager"/>
                </group>

                <group col="4">
                    <field name="total_weight_kg" readonly="1"/>
                    <field name="total_cost" readonly="1"/>
                    <field name="cost_per_kg" readonly="1"/>
                </group>

                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="weight_kg" readonly="1"/>
                        <field name="line_cost" readonly="1"/>
                    </tree>
                </field>

                <footer>
                    <button string="Confirm Repack" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
