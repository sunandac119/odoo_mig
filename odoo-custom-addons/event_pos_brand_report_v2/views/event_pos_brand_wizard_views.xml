<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_event_pos_brand_wizard_form" model="ir.ui.view">
        <field name="name">event.pos.brand.wizard.form.v2</field>
        <field name="model">event.pos.brand.wizard</field>
        <field name="arch" type="xml">
            <form string="Event POS Brand PDF Report (Yesterday)">
                <group>
                    <field name="sales_team_id" options="{'no_create_edit': True}"/>
                    <field name="show_ctn_qty"/>
                </group>
                <footer>
                    <button name="action_print_pdf" type="object" class="btn-primary" string="Print PDF"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_event_pos_brand_wizard" model="ir.actions.act_window">
        <field name="name">Event POS Brand Report (Yesterday)</field>
        <field name="res_model">event.pos.brand.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_event_pos_brand_root" name="Event Reports" parent="point_of_sale.menu_point_root" sequence="95"/>
    <menuitem id="menu_event_pos_brand_wizard" name="POS Brand PDF by Team (Yesterday)" parent="menu_event_pos_brand_root" action="action_event_pos_brand_wizard" sequence="10"/>
</odoo>
