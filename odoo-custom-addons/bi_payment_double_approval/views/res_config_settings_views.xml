<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_extended" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.extended</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@data-key='account']/div[hasclass('o_settings_container')][1]" position="after" >
            <h2>Payment First Approval</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="account_first_approval"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="account_first_approval"/>
                     </div>
                     <div class="o_setting_right_pane" attrs="{'invisible': [('account_first_approval', '=', False)]}">
                            <div class="row mt16">
                                <label for="account_first_approval_minimum_amount" class="col-md-4 o_light_label"/>
                                <field name="account_first_approval_minimum_amount" attrs="{'required': [('account_first_approval', '!=', False)]}"/>
                            </div>
                        </div>

                </div>
            </div>
            <h2>Payment Second Approval</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="account_second_approval"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="account_second_approval"/>
                     </div>
                     <div class="o_setting_right_pane" attrs="{'invisible': [('account_second_approval', '=', False)]}">
                            <div class="row mt16">
                                <label for="account_second_approval_minimum_amount" class="col-md-4 o_light_label"/>
                                <field name="account_second_approval_minimum_amount" attrs="{'required': [('account_second_approval', '!=', False)]}"/>
                            </div>
                        </div>
                </div>
            </div>

            <h2>Payment Approval Customer/Vendor</h2>
            <div class="row mt16 o_settings_container" >
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="approval_customer"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="approval_customer"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" >
                    <div class="o_setting_left_pane">
                        <field name="approval_vendor"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="approval_vendor"/>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
    </record>
</odoo>