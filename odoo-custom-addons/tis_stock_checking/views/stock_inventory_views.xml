<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="stock_inventory_barcode_form_inherit">
            <field name="name">stock.inventory.form.inherit.barcode</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div" position="inside">
                    <button name="%(action_stock_checking_wizard)d"
                            attrs="{'invisible':[('state','!=','confirm')]}"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-barcode"
                            help="Scan your product for adding Inventory Lines">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_text">Barcode Scanner</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

