<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stock_inventory_form_branch_inherit" model="ir.ui.view">
            <field name="name">stock.inventory.inherite</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>

          <record id="view_inventory_tree_branch_inherit" model="ir.ui.view">
            <field name="name">stock.inventory.tree.inherite</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
