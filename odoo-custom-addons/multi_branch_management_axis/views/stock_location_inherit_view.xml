<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stock_location_form_branch_inherit" model="ir.ui.view">
            <field name="name">stock.location.inherite</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='usage']" position="after">
                    <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>


         <record id="view_location_tree2_branch_inherit" model="ir.ui.view">
            <field name="name">stock.location.inherite</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_tree2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
