<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_pos_session_form_inherit" model="ir.ui.view">
            <field name="name">pos.session.form.inherite</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='config_id']" position="after">
                   <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_session_tree_branch_inherit" model="ir.ui.view">
            <field name="name">pos.session.tree.inherite</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                            <field string="Branch Name" name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
