<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_branch_form_view" model="ir.ui.view">
        <field name="name">res.branch.form</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <form string="Branch">
                    <header>
                        <button name="%(wizard_warehouse_branch_action)d" string="Create Warehouse" type="action" class="oe_highlight"/>
                    </header>
                <sheet>
<!--                    <button type="object" name="action_view_invoice" class="oe_stat_button" -->
<!--                            icon="fa-pencil-square-o" -->
<!--                            attrs="{'invisible':['|', ('invoice_count', '=', 0), ('state'/
, 'in', ('draft','sent','to approve'))]}">-->
                    <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_warehouse" class="oe_stat_button"  icon="fa-truck" >
                        <field name="warehouse_count" widget="statinfo" string="Warehouses" />
                    </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" string="Contact" readonly="1" required="0" groups="base.group_no_one"/>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True}'/>
                            </div>
                        </group>
                        <group>
                            <field name='company_id'/>
                            <field name='phone' widget='phone'/>
                            <field name='email' widget='email'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_branch_tree_view" model="ir.ui.view">
        <field name="name">res.branch.tree</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <tree string="branch">
                <field name='name'/>
                <field name='company_id'/>
                <field name='phone' widget='phone'/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <record id="branch_action_view" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.branch</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="view_id" ref="retirement_tree"/> -->
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <!-- Top menu item -->
    <!--  <menuitem name="Retirement Process"
         id="menu_retirement_root"
         sequence="25"/>

     <menuitem id="menu_retirement" name="Branch"
         parent="menu_retirement_root" action="branch_action_view"/>

  -->

    <menuitem action="branch_action_view" sequence="11" id="menu_action_res_branch_form" parent="base.menu_users"/>
</odoo>
