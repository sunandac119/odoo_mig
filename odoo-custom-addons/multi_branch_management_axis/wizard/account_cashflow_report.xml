<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_multi_branch_management_axis_from" model="ir.ui.view">
        <field name="name">account.cash.flow.form</field>
        <field name="model">account.cash.flow</field>
        <field name="inherit_id" ref="account.account_common_report_view"/>
        <field name="arch" type="xml">
<!--            <field name="journal_ids" position="replace"/>-->
            <xpath expr="//field[@name='date_from']" position="before">
                <field name="report_period" required="1" widget="radio"/>
            </xpath>
            <xpath expr="//field[@name='date_to']" position="after">
                <field name="no_of_year" attrs="{
                    'invisible': [('report_period', '=', 'date_report')],
                    'required': [('report_period', '=', 'year_report')]}"/>
            </xpath>
            <xpath expr="//field[@name='date_from']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('report_period', '=', 'year_report')],
                    'required': [('report_period', '=', 'date_report')]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='date_to']" position="attributes">
                <attribute name="attrs">{
                    'invisible': [('report_period', '=', 'year_report')],
                    'required': [('report_period', '=', 'date_report')]}
                </attribute>
            </xpath>
            <xpath expr="//footer" position="replace">
                <footer>
                    <button type="object" name="print_pdf_report" class="oe_highlight" default_focus="1" string="PDF Report"/>
                    <button type="object" name="print_excel_report" class="oe_highlight" string="Excel Report"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </xpath>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_multi_branch_management_axis">
        <field name="name">Cash Flow</field>
        <field name="res_model">account.cash.flow</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_multi_branch_management_axis_from"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cash_flow_report" name="Cash Flow Report"
        parent="account.menu_finance_reports" sequence="5"
        action="action_multi_branch_management_axis"/>
</odoo>
