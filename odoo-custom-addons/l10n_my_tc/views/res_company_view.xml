<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_l10n_my" model="ir.ui.view">
            <field name="name">l10n_my.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button class="btn btn-primary" type="object" name="action_subsidiary_coa" string="Subsidiary COA"
                        attrs="{'invisible':[('parent_id','=',False)]}" context="{'default_company_id': id}"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
