<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="stock_request_tree_view" model="ir.ui.view">
			<field name="name">stock.request.tree.view</field>
			<field name="model">stock.request</field>
			<field name="arch" type="xml">
				<tree string="Warhouse Stock Request" >
					<field name="name"/>
					<field name="partner_id"/>
					<field name="picking_type_id"/>
					<field name="stock_location_id" />
					<field name="delivery_location_id" />
					<field name="requested_date"/>
					<field name="states"/>
				</tree>
			</field>
		</record>


		<record id="wh_stock_request_form_view" model="ir.ui.view">
			<field name="name">stock.request.form.view</field>
			<field name="model">stock.request</field>
			<field name="arch" type="xml">
				<form string="Warhouse Stock Request">
					<header>
						<button name="action_send_mail" string="Send by Email" 
	                        	type="object" class="btn-primary"
	                        	/>
	                    <button name="action_confirm" string="Confirm" 
								type="object"  class="btn-primary" 
								attrs="{'invisible':[('states','in',['confirmed','approve','receive'])]}"/>
						<button name="action_create_picking" string="Create Picking" 
	                        	type="object"  class="btn-primary"
	                        	groups="stock.group_stock_manager"
	                        	attrs="{'invisible':[('states','in',['draft','approve','receive'])]}"/> 
	                    <button name="action_done" string="Done" 
                        	 	class="btn-primary" type="object"
                        	  	attrs="{'invisible':[('states','in',['draft','confirmed','receive'])]}"/> 
                        <button name="action_cancel" type="object" string="Cancel" special="cancel"/>

                        <field name="states" widget="statusbar"  
                        statusbar_visible="draft,confirmed,approve,receive"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
                            <button name="action_picking_view"
	                            class="oe_stat_button"
	                            icon="fa-truck"
	                            attrs="{'invisible': [('picking_count', '=', 0)]}"
	                            type="object">
	                        		<field string="Transfer" name="picking_count" widget="statinfo"/>
							</button>

							<button name="action_on_hand_view"
	                            class="oe_stat_button"
	                            icon="fa-cubes" string="On Hand"
	                            type="object">
							</button>
                        </div>
						
						<div class="oe_title">
							<h1>
								<field name="name" readonly="1"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="partner_id" />
								<field name="picking_type_id" />
								<field name="stock_location_id" />
								<field name="delivery_location_id" />
							</group>
							<group>
								<field name="requested_date"/>
								<field name="company_id" />
								<field name="requested_by"/>
								<field name="approved_by"/>
							</group>
						</group>
						<notebook>
							<page string="Stock Request Lines">
								<field name="stock_line_ids">
									<tree string="Stock Request Lines" editable="bottom">
										<field name="product_id" />
										<field name="description" />
										<field name="product_qty" />
										<field name="product_uom"/>
									</tree>
								</field>
							</page>
							<page string="Notes">
								<field name="notes" nolabel="1" placeholder="Notes.................."/>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="activity_ids" widget="mail_activity"/>
	                    <field name="message_ids" widget="mail_thread"/>
                	</div>
				</form>
			</field>
		</record>


		<record id="wh_stock_request_kanban_view" model="ir.ui.view">
			<field name="name">stock.request.kanban</field>
	        <field name="model">stock.request</field>
	        <field name="priority" eval="1"/>
	        <field name="arch" type="xml">
	            <kanban class="o_stock_request_kanban">
                    <templates>                    
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <h4 class="o_kanban_record_title" align="center">
                                        <b><field name="name"/></b>
                                    </h4>
                                    <br/>
                                    <div class="o_kanban_record_title">
                                        <i title="User" class="fa fa-user"></i> <field name="partner_id"/>
                                        <br/>
                                        <i title="Operation" class="fa fa-cog"></i> <field name="picking_type_id"/>
                                        <br/>
                                        <i title="Location" class="fa fa-truck"></i> <field name="stock_location_id"/>
                                        <br/>
                                        <i title="Location" class="fa fa-truck fa-flip-horizontal"></i> <field name="delivery_location_id"/>
                                        <br/>
                                        <i title="Company" class="fa fa-building"></i> <field name="company_id"/>
                                    </div>
                                    <br/>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                        	<field name="activity_ids" widget="kanban_activity"/>
                                            <field name="requested_date"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="approved_by" widget="many2one_avatar_user"/>
                                        </div>
	                                </div>         
                                </div>
                            </div>  
                        </t>    
                    </templates>
                </kanban>
	        </field>
		</record>


		<record id="action_stock_request" model="ir.actions.act_window">
            <field name="name">Warhouse Stock Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.request</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a New Warhouse Stock Request
        		</p>
            </field>
        </record>


		<menuitem id="warhouse_stock_request" action="action_stock_request" 
			parent="stock.menu_stock_warehouse_mgmt" sequence="20"/>
		
	</data>
</odoo>
