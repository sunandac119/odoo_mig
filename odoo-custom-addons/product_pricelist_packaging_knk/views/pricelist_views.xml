<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_pricelist_item_form_view" model="ir.ui.view">
        <field name="name">product.pricelist.item.form</field>
        <field name="inherit_id" ref="product.product_pricelist_item_form_view" />
        <field name="model">product.pricelist.item</field>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_packaging_id" domain="[('product_id', '=', product_id)]" attrs="{'invisible':[('applied_on', '!=', '0_product_variant')], 'required':[('applied_on', '=', '0_product_variant')]}" />
            </field>
            <field name="min_quantity" position="replace">
                <label for="min_quantity" string="Min. Quantity" />
                <div class="o_row">
                    <field name="min_quantity" />
                    <field name="uom_name" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom" readonly='1' />
                </div>
            </field>
        </field>
    </record>
    <record id="product_pricelist_item_tree_view_from_product_inh" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.view.from.product.inh</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_packaging_id" groups="product.group_product_variant" attrs="{'required': [('applied_on', '=', '0_product_variant')]}" />
            </field>
        </field>
    </record>
</odoo>