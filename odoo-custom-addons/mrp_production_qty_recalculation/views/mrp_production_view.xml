<odoo>
  <record id="view_mrp_production_form_inherit_qty" model="ir.ui.view">
    <field name="name">mrp.production.form.inherit.qty</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_qty']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>
      <xpath expr="//field[@name='product_qty']" position="after">
        <field name="x_actual_component_qty"/>
        <field name="x_recalculated_product_qty" readonly="1"/>
        <button name="action_recalculate_qty_from_component"
                string="Recalculate Qty"
                type="object"
                class="btn-primary"/>
      </xpath>
      <xpath expr="//field[@name='bom_id']" position="attributes">
        <attribute name="readonly">1</attribute>
      </xpath>
    </field>
  </record>
</odoo>
