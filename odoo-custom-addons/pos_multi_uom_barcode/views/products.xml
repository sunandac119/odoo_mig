<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_product_template_form_inherit_pos_uom" model="ir.ui.view">
            <field name="name">product.template.form.inherit.pos.uom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='inventory']" position="after">
                    <page name="pos_uom" string="POS UoM" groups="product.group_product_variant">
                        <field name="pos_uom_barcode_lines">
                            <tree editable="bottom" string="Units of Measures">
                                <field name="uom_categ_id" readonly="1"/>
                                <field name="uom_id"/>
                                <field name="barcode"/>
                                <field name="sale_price"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
