<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//t[@t-if=&quot;line.display_discount_policy == 'without_discount' and line.price != line.price_lst&quot;]" position="replace"/>

        <xpath expr="//t[@t-elif=&quot;line.discount !== 0&quot;]" position="replace"/>
    </t>
</templates>
