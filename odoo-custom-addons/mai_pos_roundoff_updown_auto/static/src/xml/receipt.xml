<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('receipt-change')]" position="before">
            <t t-if="env.pos.config.enable_rounding">
				<t t-if="props.order.get_rounding()">				
					<div class="pos-receipt-right-align">--------</div>
		            <br/>					
					<div class="pos-receipt-amount">
						Rounding:
						<span t-esc="env.pos.format_currency(props.order.get_rounding())" class="pos-receipt-right-align"/>
					</div>
					<div class="pos-receipt-amount">
						Net Total:
						<span t-esc="env.pos.format_currency(props.order.getNetTotalTaxIncluded())" class="pos-receipt-right-align"/>
					</div>
					<br/>
				</t>                
            </t>
            <br />
        </xpath>
    </t>

</templates>
