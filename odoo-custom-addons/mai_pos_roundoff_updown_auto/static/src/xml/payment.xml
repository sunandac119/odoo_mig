    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('next')]" position="before">
            <div t-if="env.pos.config.enable_rounding" style="margin-left: 220px;" class="button rounding" t-on-click="toggleButton">
                <span>
                    Rounding
                    <i t-att-class="{
                        'fa fa-toggle-on': currentOrder.get_rounding_status() != false,
                        'fa fa-toggle-off': currentOrder.get_rounding_status() == false
                    }" id="pos-rounding" aria-hidden="true" style="color: #ACCE45"></i>
                </span>
            </div>
        </xpath>
    </t>


    <t t-name="PaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('total')]" position="replace">
            <div class='total'>
                <t t-esc="env.pos.format_currency(currentOrder.getNetTotalTaxIncluded())"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('payment-status-total-due')]" position="replace">
            <t t-esc="env.pos.format_currency(currentOrder.getNetTotalTaxIncluded())"/>
        </xpath>
    </t>


</templates>