<odoo>
    <data>
        <record id="action_create_missing_payments" model="ir.actions.server">
            <field name="name">Create Missing POS Payments</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_pos_payment_creator"/>
            <field name="state">code</field>
            <field name="code">
                model.create_missing_payments()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(datetime.datetime.now() + datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
