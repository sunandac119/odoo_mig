
<odoo>
    <record id="view_low_sales_report_wizard_form" model="ir.ui.view">
        <field name="name">low.sales.report.wizard.form</field>
        <field name="model">low.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Low Sales Analysis">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="warehouse_id"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_open_report" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_low_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Low Sales Analysis</field>
        <field name="res_model">low.sales.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_low_sales_report" name="Low Sales Analysis" parent="sale.menu_sale_report" action="action_low_sales_report_wizard" sequence="99"/>
</odoo>
