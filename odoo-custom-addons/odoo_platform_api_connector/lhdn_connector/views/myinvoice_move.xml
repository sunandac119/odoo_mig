<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="myinvoice_move_view_form" model="ir.ui.view">
            <field name="name">myinvoice.move.view.form</field>
            <field name="model">myinvoice.move</field>
            <field name="arch" type="xml">
                <form create="0" edit="0" delete="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="uuid" readonly="1"/>
                                <field name="submissionUID" readonly="1"/>
                                <field name="longId" readonly="1"/>
                                <field name="internalId" readonly="1"/>
                                <field name="typeName" readonly="1"/>
                                <field name="typeVersionName" readonly="1"/>
                                <field name="issuerTin" readonly="1"/>
                                <field name="issuerName" readonly="1"/>
                                <field name="receiverTin" readonly="1"/>
                                <field name="receiverName" readonly="1"/>
                                <field name="dateTimeIssued" readonly="1"/>
                                <field name="dateTimeReceived" readonly="1"/>
                                <field name="dateTimeValidated" readonly="1"/>
                                <field name="totalSales" readonly="1"/>
                                <field name="totalDiscount" readonly="1"/>
                            </group>
                            <group>
                                <field name="netAmount" readonly="1"/>
                                <field name="total" readonly="1"/>
                                <field name="status" readonly="1"/>
                                <field name="cancelDateTime" readonly="1"/>
                                <field name="rejectRequestDateTime" readonly="1"/>
                                <field name="documentStatusReason" readonly="1"/>
                                <field name="createdByUserId" readonly="1"/>
                                <field name="supplierTIN" readonly="1"/>
                                <field name="supplierName" readonly="1"/>
                                <field name="submissionChannel" readonly="1"/>
                                <field name="intermediaryName" readonly="1"/>
                                <field name="intermediaryTIN" readonly="1"/>
                                <field name="buyerName" readonly="1"/>
                                <field name="buyerTIN" readonly="1"/>
                                <!--                                <field name="" readonly="1"/>-->
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="myinvoice_move_view_tree" model="ir.ui.view">
            <field name="name">myinvoice.move.view.tree</field>
            <field name="model">myinvoice.move</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0">
                    <field name="uuid"/>
                    <field name="typeName"/>
                    <field name="dateTimeIssued"/>
                    <field name="supplierName"/>
                    <field name="receiverName"/>
                    <field name="status"/>
                    <field name="totalSales"/>
                </tree>
            </field>
        </record>


        <record id="myinvoice_move_action" model="ir.actions.act_window">
            <field name="name">MyInvoice Move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myinvoice.move</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="myinvoice_move_menu" name="LHDN MyInvoice Move"
                  parent="account.menu_finance_receivables"
                  action="lhdn_connector.myinvoice_move_action" sequence="700"/>
    </data>
</odoo>