<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BI Reporting Top Menu -->
    <menuitem id="menu_bi_reporting_root" name="BI Reporting" sequence="10"/>

    <!-- Submenus under BI Reporting -->
    <menuitem id="menu_bi_reporting_management" name="Management" parent="menu_bi_reporting_root" sequence="1"/>
    <menuitem id="menu_bi_reporting_operation" name="Operation" parent="menu_bi_reporting_root" sequence="2"/>
    <menuitem id="menu_bi_reporting_finance" name="Finance" parent="menu_bi_reporting_root" sequence="3"/>

    <!-- Action Window for the Materialized View -->
    <record id="action_bi_daily_sales_by_branch_mv" model="ir.actions.act_window">
        <field name="name">Daily Sales by Branch</field>
        <field name="res_model">bi.daily.sales.by.branch.mv</field>
        <field name="view_mode">pivot</field>
        <field name="context">{{}}</field>
    </record>

    <!-- Menu for Daily Sales by Branch under Management -->
    <menuitem id="menu_bi_daily_sales_by_branch_mv"
              name="Daily Sales by Branch"
              parent="menu_bi_reporting_management"
              action="action_bi_daily_sales_by_branch_mv"
              sequence="1"/>

</odoo>
