<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//t/div[hasclass('page')]/h2" position="replace">

            <h2>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                <span t-if="o.move_type == 'in_invoice' and not is_self_billed_invoices">Vendor Bill</span>
                <span t-if="o.move_type == 'in_invoice' and is_self_billed_invoices">Self-Billed Invoice</span>
                <span t-if="o.name != '/'" t-field="o.name"/>
            </h2>

        </xpath>

        <xpath expr="//t/div[hasclass('page')]" position="before">
            <br/>
            <div class="row">
                <div class="col-6">
                    Supplier TIN:
                    <t t-esc="o.company_id.partner_id.tin"/>
                    <br/>
                    Supplier Registration Number:
                    <t t-esc="o.company_id.partner_id.brn"/>
                    <br/>
                    Supplier SST ID:
                    <t t-esc="o.company_id.partner_id.sst"/>
                    <br/>
                    Supplier MSIC Code:
                    <t t-esc="o.company_id.partner_id.msic_code_id.code"/>
                    <br/>
                </div>
                <!--                <hr/>-->
                <div>
                    E-INVOICE
                    <br/>
                    Unique Identifier No:
                    <span t-esc="o.lhdn_uuid"/>
                    <br/>
                    Invoice Date and Time:
                    <span t-esc="o.invoice_issue_time"/>
                    <br/>
                    <t t-if="o.lhdn_uuid and o.lhdn_longid">
                        <t t-set="lhdn_connector_id" t-value="request.env['lhdn.setup'].sudo().search([],limit=1)"/>
                        <t t-set="base_url" t-value=""/>
                        <t t-if="lhdn_connector_id.lhdn_connection_server_type == 'sandbox'">
                            <t t-set="base_url" t-value="'https://preprod.myinvois.hasil.gov.my/'"/>
                        </t>
                        <t t-else="">
                            <t t-set="base_url" t-value="'https://myinvois.hasil.gov.my/'"/>
                        </t>
                        <img t-if="lhdn_connector_id" t-att-src="'/report/barcode/QR/%s' % quote_plus(base_url +o.lhdn_uuid+'/share/'+o.lhdn_longid)"
                             alt="QR Code" style="height:150px; width:150px;"/>
                    </t>
                </div>
            </div>
            <hr/>
            <div>
                <div class="col-6">
                    Buyer TIN:
                    <t t-esc="o.partner_id.tin"/>
                    <br/>
                    Buyer Name:
                    <t t-esc="o.partner_id.name"/>
                    <br/>
                    Buyer Registration Number:
                    <t t-esc="o.partner_id.brn"/>
                    <br/>
                    Buyer Address: NA
                    <br/>
                    Buyer Contact Number:
                    <t t-esc="o.partner_id.mobile"/>
                    <br/>
                    Buyer Email:
                    <t t-esc="o.partner_id.email"/>
                    <br/>
                    Buyer SST Registration ID:
                    <t t-esc="o.partner_id.brn"/>
                </div>
            </div>
        </xpath>

        <!--        <xpath expr="//div[hasclass('page mb-4')]" position="inside">-->
        <!--            <div>-->
        <!--                yash-->
        <!--            </div>-->
        <!--        </xpath>-->

    </template>
</odoo>
