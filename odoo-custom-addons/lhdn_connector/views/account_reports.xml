<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_self_billed_invoices">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-set="is_self_billed_invoices" t-value="True"/>
                    <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                       t-call="account.report_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <record id="accounts_self_billed_invoice" model="ir.actions.report">
            <field name="name">Self-Billed Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">lhdn_connector.report_self_billed_invoices</field>
            <field name="report_file">lhdn_connector.report_self_billed_invoices</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')
            </field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
            <!--            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),-->
            <!-- (4, ref('account.group_account_readonly'))]"/>-->
        </record>

    </data>
</odoo>