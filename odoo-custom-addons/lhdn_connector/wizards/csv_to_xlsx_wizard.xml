<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_csv_to_xlsx_wizard" model="ir.ui.view">
            <field name="name">csv.to.xlsx.wizard.form</field>
            <field name="model">csv.to.xlsx.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload CSV and Generate XLSX">
                    <group>
                        <field name="csv_file" filename="csv_filename"/>
                        <field name="processed_file" filename="processed_filename" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Process" type="object" name="process_csv" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_csv_to_xlsx_wizard" model="ir.actions.act_window">
            <field name="name">CSV Fileas Processings</field>
            <field name="res_model">csv.to.xlsx.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <!--    <odoo>-->
        <menuitem id="bank_csv_processings" name="Bank CSV Processings" parent="lhdn_connector.menu_lhdn_connector"
                  action="action_csv_to_xlsx_wizard" sequence="10"/>
        <!--</odoo>-->
    </data>
</odoo>
