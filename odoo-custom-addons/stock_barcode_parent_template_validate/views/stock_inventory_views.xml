<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_inventory_form_inherit_barcode" model="ir.ui.view">
        <field name="name">stock.inventory.form.inherit.barcode</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <field name="x_scan_barcode" widget="barcode_qr_scanner"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
