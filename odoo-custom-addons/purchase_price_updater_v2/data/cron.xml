<odoo>
    <data noupdate="1">
        <!-- Cron job to run cron_update_standard_price -->
        <record id="ir_cron_cron_update_standard_price" model="ir.cron">
            <field name="name">Update Product Standard Price</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_standard_price()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
