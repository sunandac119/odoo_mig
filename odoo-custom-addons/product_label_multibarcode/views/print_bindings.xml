<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Variant: Print → Product Label (PDF) — Choose UoM -->
    <record id="srv_print_labels_uom_pp" model="ir.actions.server">
        <field name="name">Product Label (PDF) — Choose UoM</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
        <field name="state">code</field>
        <field name="code">
action = env.ref('product_label_multibarcode.action_open_label_barcode_wizard').sudo().read()[0]
action['context'] = dict(env.context, default_barcode_type='Code128', default_label_cols=3)
action
        </field>
    </record>

    <!-- Product Template: Print → Product Label (PDF) — Choose UoM -->
    <record id="srv_print_labels_uom_pt" model="ir.actions.server">
        <field name="name">Product Label (PDF) — Choose UoM</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_type">report</field>
        <field name="state">code</field>
        <field name="code">
action = env.ref('product_label_multibarcode.action_open_label_barcode_wizard').sudo().read()[0]
action['context'] = dict(env.context, default_barcode_type='Code128', default_label_cols=3)
action
        </field>
    </record>
</odoo>
