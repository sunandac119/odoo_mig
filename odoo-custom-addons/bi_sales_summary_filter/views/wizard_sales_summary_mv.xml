<odoo>
    <record id="view_sales_summary_filter_wizard" model="ir.ui.view">
        <field name="name">wizard.sales.summary.mv.form</field>
        <field name="model">wizard.sales.summary.mv</field>
        <field name="arch" type="xml">
            <form string="Sales Summary Filter">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="vendor_id"/>
                    <field name="product_categ_id"/>
                    <field name="sale_team_id"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_view_filtered_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sales_summary_filter" model="ir.actions.act_window">
        <field name="name">Sales Summary Filter</field>
        <field name="res_model">wizard.sales.summary.mv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_bi_reporting_root" name="BI Reporting" sequence="10"/>
    <menuitem id="menu_bi_reporting_sub" name="BI Report" parent="menu_bi_reporting_root" sequence="1"/>
    <menuitem id="menu_bi_reporting_operation" name="Operation" parent="menu_bi_reporting_sub" sequence="10"/>
    <menuitem id="menu_sales_summary_filter"
              name="Sales Summary Filter"
              parent="menu_bi_reporting_operation"
              action="action_sales_summary_filter"/>
</odoo>
