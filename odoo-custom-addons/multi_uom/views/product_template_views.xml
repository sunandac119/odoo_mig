
<odoo>
    <record id="view_product_template_form_multi_uom" model="ir.ui.view">
        <field name="name">product.template.form.multi.uom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Multi UoM">
                    <field name="uom_mapping_ids">
                        <tree editable="bottom">
                            <field name="uom_id"/>
                            <field name="factor"/>
                            <field name="price"/>
                            <field name="barcode"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
