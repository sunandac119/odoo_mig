<odoo>
    <record id="stock_picking_form_barcode" model="ir.ui.view">
        <field name="name">stock.picking.form.barcode</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add barcode field in form view of move lines -->
            <xpath expr="//field[@name='move_ids_without_package']/form//field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Scan POS UOM Barcode"/>
            </xpath>

            <!-- Add barcode field in tree view of move lines -->
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="before">
                <field name="x_scanned_barcode" placeholder="Scan Barcode"/>
            </xpath>
        </field>
    </record>
</odoo>