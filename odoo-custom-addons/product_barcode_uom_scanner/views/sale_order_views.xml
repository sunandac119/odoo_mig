<odoo>
    <record id="view_order_form_barcode_updated" model="ir.ui.view">
        <field name="name">sale.order.form.barcode.updated</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id']" position="before">
                <field name="input_barcode" placeholder="Scan POS UOM Barcode" 
                    attrs="{'invisible': [('display_type', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="before">
                <field name="input_barcode" placeholder="Scan Barcode"/>
            </xpath>
        </field>
    </record>
</odoo>